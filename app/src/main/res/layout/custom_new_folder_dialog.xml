<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="Create Folder"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_menu"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <EditText
            android:id="@+id/txt_new_folder"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:background="@drawable/bg_et_input"
            android:hint="New Folder"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:layout_gravity="center_horizontal">

            <requestFocus />
        </EditText>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_create"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_btn_confirm"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/btn_lbl_create"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_btn_delete"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/btn_lbl_cancel"
                android:textAllCaps="false"
                android:textColor="@color/btn_cancel_boarder" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>