<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.satish.filemanager">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />

    <application
        android:name="com.droids.tamada.filemanager.app.AppController"
        android:allowBackup="true"
        android:icon="@drawable/ic_app_logo"
        android:hardwareAccelerated="false"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.droids.tamada.filemanager.activity.MainActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.droids.tamada.filemanager.activity.ImageViewActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.droids.tamada.filemanager.activity.TextFileViewActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name="com.droids.tamada.filemanager.activity.WelcomeScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.droids.tamada.filemanager.activity.ScreenLockActivity"
            android:screenOrientation="portrait">

        </activity>

    </application>
</manifest>